<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/login_bg">
    <include layout="@layout/include_toolbar"
        android:visibility="gone"/>
    <ImageView
        android:layout_marginTop="85dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/dimen_192"
        android:layout_height="@dimen/dimen_162"
        android:scaleType="fitXY"
        app:srcCompat="@mipmap/ic_main"
        android:id="@+id/imageView" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_30"
        android:paddingRight="@dimen/dimen_30"
        android:layout_marginLeft="@dimen/dimen_20"
        android:layout_marginRight="@dimen/dimen_20"
        android:background="@color/white">

        <ImageView
            android:layout_width="120px"
            android:layout_height="@dimen/dimen_16"
            app:srcCompat="@mipmap/ic_user"
            />

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="用户名"
            android:inputType="phone"
            android:text=""
            android:textColorHint="@color/gray3"
            android:textSize="@dimen/dimen_14sp"
            />

    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:id="@+id/vLinePhone"
        style="@style/Line"
         android:layout_marginLeft="@dimen/dimen_20"
        android:layout_marginRight="@dimen/dimen_20"
        />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_30"
        android:paddingRight="@dimen/dimen_30"
        android:layout_marginLeft="@dimen/dimen_20"
        android:layout_marginRight="@dimen/dimen_20"
        android:background="@color/white"
        >

        <ImageView
            android:layout_width="120px"
            android:layout_height="@dimen/dimen_16"
            app:srcCompat="@mipmap/ic_key"

            />

        <EditText
            android:id="@+id/etPwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="密码"
            android:inputType="textPassword"
            android:text=""
            android:textColorHint="@color/gray3"
            android:textSize="@dimen/dimen_14sp"
            />

    </com.zhy.autolayout.AutoLinearLayout>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_42"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="@dimen/dimen_20"
        android:layout_marginRight="@dimen/dimen_20"
        android:background="@drawable/selector_login_btn"
        android:enabled="true"
        android:text="@string/login_btn"
        android:textColor="@color/selector_login_btn"
        android:textSize="@dimen/dimen_14sp"/>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_12"
        android:orientation="horizontal">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_register"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/dimen_10"
                android:text="@string/register_btn"
                android:textColor="@color/blue0"
                android:textSize="@dimen/dimen_14sp"/>
        </com.zhy.autolayout.AutoLinearLayout>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_forget"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:gravity="center"
                android:padding="@dimen/dimen_10"
                android:text="@string/forget_btn"
                android:textColor="@color/blue0"
                android:textSize="@dimen/dimen_14sp"/>
        </com.zhy.autolayout.AutoLinearLayout>



    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>