<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        >

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_scan"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_scan_blue"
                android:padding="10dp"

                />

            <EditText
                android:id="@+id/et_scan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入或扫描条形码"
                android:layout_marginLeft="10dp"
                android:theme="@style/MyEditText"
                android:imeOptions="actionSearch"
                android:singleLine="true" />

        </com.zhy.autolayout.AutoLinearLayout>
        <TextView
            style="@style/Line"
            />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                >
                <TextView
                    android:text="商品信息"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/ivImg"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_launcher"/>


            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="品类："
                        android:textSize="16sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/tv_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:paddingLeft="10dp"

                        android:textSize="16sp"/>
                </com.zhy.autolayout.AutoLinearLayout>

                <TextView
                    style="@style/Line"
                    />
                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="国家："
                        android:textSize="16sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/tv_country"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:paddingLeft="10dp"

                        android:textSize="16sp"
                        />

                </com.zhy.autolayout.AutoLinearLayout>
                <TextView
                    style="@style/Line"
                    />
                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="产地："
                        android:textSize="16sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/tv_birthplace"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:textSize="16sp"/>

                </com.zhy.autolayout.AutoLinearLayout>
                <TextView
                    style="@style/Line"
                    />
                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="容量："
                        android:textSize="16sp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/tv_capacity"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:paddingLeft="10dp"
                        android:textSize="16sp"/>
                </com.zhy.autolayout.AutoLinearLayout>
                <TextView
                    style="@style/Line"
                    />

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="年份："
                        android:textSize="16sp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/tv_year"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:paddingLeft="10dp"
                        android:textSize="16sp"
                        />
                </com.zhy.autolayout.AutoLinearLayout>
                <TextView
                    style="@style/Line"
                    />
                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="总量："
                        android:textSize="16sp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/tv_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:paddingLeft="10dp"
                        android:textSize="16sp"/>
                </com.zhy.autolayout.AutoLinearLayout>
                <TextView
                    style="@style/Line"
                    />
                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="当前位置："
                        android:textSize="16sp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/tv_position"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:paddingLeft="10dp"
                        android:textSize="16sp"/>
                </com.zhy.autolayout.AutoLinearLayout>
                <TextView style="@style/Line" />
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="出/入库："
                android:textSize="16sp"
                android:textStyle="bold"
                />
            <Button
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_alignParentLeft="true"
                android:text="出库"
                android:textColor="@color/white"
                android:background="@drawable/btn_selector"
                android:id="@+id/btnSwitch"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp" />


        </com.zhy.autolayout.AutoLinearLayout>
        <TextView
            style="@style/Line"
            />



















        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvRecPerson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="接收人："
                android:textSize="16sp"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/et_rec_person"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:paddingLeft="10dp"
                android:textSize="16sp"
                android:theme="@style/MyEditText"/>

        </com.zhy.autolayout.AutoLinearLayout>
        <TextView
            android:id="@+id/vLinePhone"
            style="@style/Line"
            />
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvRecTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="接收时间："
                android:textSize="16sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/tv_rec_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:paddingLeft="10dp"
                android:textSize="16sp"
                />

        </com.zhy.autolayout.AutoLinearLayout>
        <TextView
            style="@style/Line"
            />
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="数量："
                android:textSize="16sp"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/etNum"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:textSize="16sp"
                android:theme="@style/MyEditText"/>
        </com.zhy.autolayout.AutoLinearLayout>
        <TextView
            style="@style/Line"
            />
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvExtra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="备注："
                android:textSize="16sp"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/et_remark"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:paddingLeft="10dp"
                android:textSize="16sp"
                android:theme="@style/MyEditText"/>
        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            style="@style/Line"
            />









        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            >
            <Button
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_alignParentLeft="true"
                android:text="添加"
                android:textColor="@color/white"
                android:background="@drawable/btn_selector"
                android:id="@+id/btn_add"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp" />
            <Button
                android:id="@+id/btn_upload"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_alignParentRight="true"
                android:text="上传"
                android:textColor="@color/white"
                android:background="@drawable/btn_selector"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp" />

        </com.zhy.autolayout.AutoRelativeLayout>
        <TextView style="@style/Line"
            android:layout_marginTop="15dp"
            />
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#e1edff"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="编码"
                android:gravity="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="状态"
                android:gravity="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="序号"
                android:gravity="center"
                />
        </com.zhy.autolayout.AutoLinearLayout>
        <TextView style="@style/Line"
            />
        <com.hz.tt.widget.MyListViewInScrollView
            android:id="@+id/rvRecentMessage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:rv_divider_color="@color/line"
            app:rv_divider_size="1px"/>
    </com.zhy.autolayout.AutoLinearLayout>
</ScrollView>